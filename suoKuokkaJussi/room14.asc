//siirtymät kenttien välillä

function room_LeaveLeft(){
  player.ChangeRoom(13, 160, 500);  //metsäpurolle
}

//muuta

function oVipukeppi_PickUp(){
  oVipukeppi.Visible = false;
  player.AddInventory(iVipukeppi);  //poimitaan keppi
}

function oPatokivi_Look(){
  Display("Onpas iso kivi. Tuo ei kovin helposti siirry.");
}

function oPatokivi_UseInv(){
  if (player.HasInventory(iVipukeppi)){ //tarkistetaan onko vipukeppi mukana
    Display("Antakaa minulle kiinteä piste, niin minä vipuan maan paikaltaan!");
    oPatokivi.Move(590, 700, 5);  //siirretään kiveä - pitääkö tämä animoida?
    player.LoseInventory(iVipukeppi); //keppi meni rikki..
    while ((oPatokivi.X == 590) && (oPatokivi.Y == 700)){ //kiven ollessa oikeassa paikassa, se tekee padon
      Pato_joki.Visible = false;  //joki ehtyy
      Pato_tulva.Visible = true;  //niitty takan tulvii
      Pato_tehty = true;  // ja globaali patomuuttuja saa arvon true
    }
  }
  Display("Millä tämän kivenjärkäleen saisi liikkumaan?");
}
