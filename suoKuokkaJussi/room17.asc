function room_Leave(){ //siirtyminen mökin ulkopuolelle
player.ChangeRoom(1, 585, 367);
}

//muita toimintoja alle

function UuniLuukku_AnyClick(){ //jos uunin luukku klikataan muuten vaan
  Display("The latch to the oven gets really hot. Careful!");
}

function UuniLuukku_UseInv(){ //paistetaan piirakka
  if (player.HasInventory(iRaakaPiirakka)){
    Display(".. and then we bake the pie..."); // pelaajan tarkoitus ajatella ääneen
    player.LoseInventory(iRaakaPiirakka);
    //TÄHÄN VÄLIIN JOKU KUVAFEIDAUS TMS JOKA OSOITTAA AJAN KULUNEEN
    player.AddInventory(iPiirakka); //valmis piirakka inventaarioon
    Display("That was fast.");
    }
  else Display("I need a warm oven and something to bake.");
}

function Tulipesa_AnyClick(){ //jos tulipesän luukkua klikataan muuten vaan
  Display("I don't want to examine the firechamber. My clothes will get dirty.");
}

function Tulipesa_UseInv(){ //sytytetään tuli lieteen
  if (player.HasInventory(iPolttopuut) && player.HasInventory(iTulukset) && player.HasInventory(iRaakaPiirakka)){ //jos kaikki tarvittava löytyy inventaariosta
    Display("I just about managed to squeeze in all of the wood.");
    player.LoseInventory(iPolttopuut);
    Display("Now I need fire. I really hope someone finds a better way to do this.");
    oLiedenTuli.Visible = true;
    Display("Now the pie goes into the oven.");
  }
  else Display("I need some firewood, a tinderbox and something to bake.");  
}

function Tuhkaluukku_AnyClick(){ // tätä ei oikeasti tarvita, mutta tein kuitenkin ;) vitsi toimii kuitenkin paljon paremmin suomeksi
  Display("Right, let's just take even the ashes away..");
}

function oVuoka_Look(){
  Display("There's my clean ovenpan.");
}

function oVuoka_UseInv(){
  if (player.HasInventory(iJauhoSakki) && player.HasInventory(iMarjoja)){
    Display("... add some flour and berries, then the dough is ready.");
    player.LoseInventory(iJauhoSakki);
    player.LoseInventory(iMarjoja);
    oVuoka.Visible = false;
    player.AddInventory(iRaakaPiirakka);
    Display("Now I just need to bake the pie.");
  }
  else Display("I need some flour for the pie. And something to fill it with.");
}

function oJauhoPussi_AnyClick(){
  Display("Old flour, it gives me stomachache.");
}

function oJauhoPussi_PickUp(){
  player.AddInventory(iJauhoSakki);
}

function oHalot_AnyClick(){
  Display("Some dry firewood.");
}

function oHalot_PickUp(){
  player.AddInventory(iPolttopuut);
}

function oLiedenTuli_AnyClick(){
  Display("Ouch, it burns!");
}
